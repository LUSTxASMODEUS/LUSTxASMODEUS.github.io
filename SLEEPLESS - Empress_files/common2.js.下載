

//NAVI
$(window).on("scroll", function(){
    $("header").css("left", -$(window).scrollLeft());
    $("footer").css("left", -$(window).scrollLeft());
});


$(function() {
    var navBtn = $('#topheader');
    navBtn.hide();
    $(window).scroll(function() {
        if ($(this).scrollTop() > 1600) {
            navBtn.fadeIn('300');
        }
        else {
            navBtn.fadeOut('300');
        }
    });
});

$(function() {
    var navBtn = $('.pagetop_btn');
    navBtn.hide();
    $(window).scroll(function() {
        if ($(this).scrollTop() > 1200) {
            navBtn.fadeIn('300');
        }
        else {
            navBtn.fadeOut('300');
        }
    });
});

$(function () {
 var headerHight = 65;
 $('a[href^=#]').click(function(){
     var href= $(this).attr("href");
       var target = $(href == "#" || href == "" ? 'html' : href);
        var position = target.offset().top-headerHight;
     $("html, body").animate({scrollTop:position}, 550, "swing");
        return false;
   });
});



//LOAD
$('.loading').css('display','block');
$('.wow').css('opacity','0');

$(window).load(function () {
  $('.loading').delay(100).fadeOut(600);
	$('.wow').css('opacity','1');
  new WOW().init();
});

$(function(){
  setTimeout('stopload()',4500);
  new WOW().init();
});

function stopload(){
  $('#top').css('display','block');
  $('.loading').delay(900).fadeOut(800);

  setTimeout(function () {
  }, 1500);
}

//NEWS
$(function() {
    function headline() {
        setTimeout(function() {
            headline();
            $("#news li").not(':first').css('display', 'none');
            $("#news li:first").fadeOut('normal', function() {
                $(this).next().fadeIn('normal');
                $(this).clone().appendTo("#news ul");
                $(this).remove();
            });
        }, 6000);
    }
    var n_size = $("#news li").size();
    if(n_size > 1) {
        headline();
    }
});


