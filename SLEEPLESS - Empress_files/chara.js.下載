//marie
$("#marie .sabun01 a").click(function(){
	$('#stand_marie').attr("src",("./images/chara/chara1/stand_a.png"));
	$("#marie .sabun01 img").attr("src",("./images/chara/1_on.png"));
  $("#marie .sabun02 img").attr("src",("./images/chara/2.png"));
  $("#marie .sabun03 img").attr("src",("./images/chara/3.png"));
	return false;
});
$("#marie .sabun02 a").click(function(){
	$('#stand_marie').attr("src",("./images/chara/chara1/stand_b.png"));
  $("#marie .sabun01 img").attr("src",("./images/chara/1.png"));
  $("#marie .sabun02 img").attr("src",("./images/chara/2_on.png"));
  $("#marie .sabun03 img").attr("src",("./images/chara/3.png"));
  return false;
});
  $("#marie .sabun03 a").click(function(){
	$('#stand_marie').attr("src",("./images/chara/chara1/stand_c.png"));
  $("#marie .sabun01 img").attr("src",("./images/chara/1.png"));
  $("#marie .sabun02 img").attr("src",("./images/chara/2.png"));
  $("#marie .sabun03 img").attr("src",("./images/chara/3_on.png"));
	return false;
});


